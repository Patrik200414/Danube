{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AddToCartDTO",
  "type": "object",
  "properties": {
    "customerId": {
      "type": "string"
    },
    "productId": {
      "type": "number"
    },
    "quantity": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1500,
      "errorMessage": "You can add at least 1 or upmost 1500 of the products!"
    }
  },
  "required": ["customerId", "productId", "quantity"]
}